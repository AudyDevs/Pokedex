<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/main"
    android:background="@color/transparent">

    <ImageView
        android:layout_width="380dp"
        android:layout_height="300dp"
        android:src="@drawable/ic_border_pokemon_types"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/cd_icon" />

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="200dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical"
        android:paddingHorizontal="6dp"
        android:paddingTop="12dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="6dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/ivAllTypes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/buttonAllTypes"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_all_types"
                    android:contentDescription="@string/cd_type" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivIce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_ice"
                android:contentDescription="@string/cd_type"
                tools:ignore="NestedWeights"/>

            <ImageView
                android:id="@+id/ivFlying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_flying"
                android:contentDescription="@string/cd_type" />

            <ImageView
                android:id="@+id/ivNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_normal"
                android:contentDescription="@string/cd_type" />

            <ImageView
                android:id="@+id/ivRock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_rock"
                android:contentDescription="@string/cd_type" />

            <ImageView
                android:id="@+id/ivFighting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_fighting"
                android:contentDescription="@string/cd_type" />

            <ImageView
                android:id="@+id/ivGhost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_ghost"
                android:contentDescription="@string/cd_type" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFairy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_fairy"
                android:contentDescription="@string/cd_type"
                tools:ignore="NestedWeights"/>

            <ImageView
                android:id="@+id/ivBug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_bug"
                android:contentDescription="@string/cd_type" />

            <ImageView
                android:id="@+id/ivGround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_ground"
                android:contentDescription="@string/cd_type" />

            <ImageView
                android:id="@+id/ivElectric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_electric"
                android:contentDescription="@string/cd_type" />

            <ImageView
                android:id="@+id/ivWater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_water"
                android:contentDescription="@string/cd_type" />

            <ImageView
                android:id="@+id/ivPsychic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_psychic"
                android:contentDescription="@string/cd_type" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPoison"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_poison"
                android:contentDescription="@string/cd_type"
                tools:ignore="NestedWeights" />

            <ImageView
                android:id="@+id/ivDragon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_dragon"
                android:contentDescription="@string/cd_type" />

            <ImageView
                android:id="@+id/ivSteel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_steel"
                android:contentDescription="@string/cd_type" />

            <ImageView
                android:id="@+id/ivGrass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_grass"
                android:contentDescription="@string/cd_type" />

            <ImageView
                android:id="@+id/ivDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_dark"
                android:contentDescription="@string/cd_type" />

            <ImageView
                android:id="@+id/ivFire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="6dp"
                android:layout_weight="1"
                android:src="@drawable/ic_type_fire"
                android:contentDescription="@string/cd_type" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>